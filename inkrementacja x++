public class test_7 {
    public static void main(String[] args) {

        int x = 1;  // od tej pory x wynosi // 1 ( dopisuję int by kod niżej zaczął // działać w wyświetleniu )


        System.out.println(x++);
        System.out.println(x);

    }
}


//  wyświetli wynik:
//        x = 1
//       a następnie
//        x=2
